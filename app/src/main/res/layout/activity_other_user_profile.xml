<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.my.game.wesport.activity.OtherUserProfileActivity">

    <ImageView
        android:id="@+id/other_user_cover_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_placeholder_drawable"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="100sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/other_user_profile_shape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/other_user_profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="15sp"
                    android:background="@drawable/profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/other_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45sp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:text="Abdul Qadir Tahir" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#a2a2a2" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="20sp"
                    android:text="EMAIL"
                    android:textColor="#706e6e"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/other_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="3sp"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="abdulblue007@gmail.com" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="110sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp"
                android:background="#a2a2a2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="20sp"
                    android:text="BIO"
                    android:textColor="#706e6e"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/other_user_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="3sp"
                    android:hint="User has no bio..."
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="110sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp"
                android:background="#a2a2a2" />


            <TextView
                android:foreground="?android:selectableItemBackground"
                android:id="@+id/delete_other_user_from_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:clickable="true"
                android:onClick="onRemoveUserClick"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="@string/delete_member"
                android:textColor="#fa3232"
                android:textSize="15sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15dp"
                android:background="#a2a2a2" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
