<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/recipient_rounded_corners"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#977254"
            tools:text="Abdul Qadir Tahir"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipient_group_chat_userName"
            />
        <TextView
            android:id="@+id/text_view_recipient_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hi. How are you?"
            android:padding="2dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>